@using TheHermes.Models
@model LoginViewModel
@{
    ViewBag.Title = "Авторизация";
}

@*<h2>@ViewBag.Title.</h2>*@

<div class="container body-content">
    <div class="row">
        <div class="col-6 ver-center">
            <div class="auth-image">
                <img src="~/Content/img/map-def.png" alt="">
            </div>
        </div>
        <div class="col-6">
            <div class="col-md-12">
                <h2>Авторизация.</h2>
                <h4>Используйте аккаунт для доступа к сервису</h4>
                <hr>
            </div>
            <section id="loginForm">
                <form action="/Account/Login" class="form-horizontal" method="post" role="form">
                    <input name="__RequestVerificationToken" type="hidden" value="-y8ySqXQRAiTZLly1ZsH5bbZvlhkQpC7gAk3X29C24RM1YiQlnfJcDeiKsgzmKEYtkax6-U8Rd7UwnQvVfBpYRIonx7AIduZGeoRIahHDG41">

                    <div class="form-group">
                        <label class="col-md-2 control-label" for="Email">Логин</label>
                        <div class="col-md-12">
                            <input class="form-control" data-val="true" data-val-required="Требуется поле Логин." id="Email" name="Email" type="text" value="">
                            <span class="field-validation-valid text-danger" data-valmsg-for="Email" data-valmsg-replace="true"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label" for="Password">Пароль</label>
                        <div class="col-md-12">
                            <input class="form-control" data-val="true" data-val-required="Требуется поле Пароль." id="Password" name="Password" type="password">
                            <span class="field-validation-valid text-danger" data-valmsg-for="Password" data-valmsg-replace="true"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <button type="submit" class="btn btn-outline-dark">Авторизация</button>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <a class="link-reg" href="/Account/Register">Регистрация нового аккаунта</a>
                        </div>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

